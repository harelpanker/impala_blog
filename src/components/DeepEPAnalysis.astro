  #deepep-analysis .viz-card {
    border: none;
    border-radius: 12px;
    background: rgba(255, 252, 246, 0.72);
    overflow: hidden;
  }

  #deepep-analysis .viz-card-header {
    padding: 10px 12px;
    border-bottom: none;
    background: linear-gradient(180deg, rgba(255, 248, 239, 0.82), rgba(255, 252, 246, 0.6));
  }

  #deepep-analysis .viz-card-title {
    color: var(--muted);
    letter-spacing: 0.09em;
    font-size: 0.66rem;
  }

  #deepep-analysis .viz-card-body {
    padding: 11px 12px 12px;
  }

  #deepep-analysis .viz-canvas-wrap {
    margin-bottom: 9px;
    border: none;
    border-radius: 10px;
    background: rgba(255, 248, 239, 0.5);
    min-height: 220px;
    height: 220px;
  }

  #deepep-analysis #deepepCurve.viz-canvas {
    background: transparent;
    border-radius: 10px;
  }

  #deepep-analysis .viz-legend {
    margin-top: 8px;
    gap: 12px;
  }

  #deepep-analysis .viz-legend-item {
    font-size: 0.73rem;
    line-height: 1.25;
    color: var(--muted);
  }

  #deepep-analysis .viz-card-caption {
    font-size: 0.79rem;
    line-height: 1.58;
    color: var(--muted);
  }

  /* Table */
  #deepep-analysis .viz-table-container {
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    margin: 0;
    padding: 4px 0 2px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
  }

  #deepep-analysis .viz-comparison-grid {
    display: grid;
    grid-template-columns: minmax(88px, 1fr) repeat(4, minmax(66px, 1fr));
