    background: rgba(255, 252, 246, 0.75);
  }

  #deepep-analysis .viz-segment:has(input:checked) {
    background: var(--surface);
    color: var(--fg);
    font-weight: 600;
  }

  #deepep-analysis .viz-segment input {
    position: absolute;
    opacity: 0;
    width: 0;
    height: 0;
  }

  #deepep-analysis .viz-status-bar {
    border: none;
    border-radius: 8px;
    background: rgba(255, 252, 246, 0.95);
    padding: 6px 10px;
    min-height: 34px;
  }

  #deepep-analysis .viz-status-content {
    font-size: 0.72rem;
    letter-spacing: 0.01em;
    color: var(--muted);
  }

