  #deepep-analysis .viz-sub {
    display: block;
    font-size: 0.64rem;
    font-weight: 400;
    opacity: 0.8;
    margin-top: 2px;
  }

  #deepep-analysis .viz-row-label {
    color: var(--muted);
    font-weight: 500;
