    #deepep-analysis .viz-controls {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }

    #deepep-analysis #deepepKpi {
      max-width: 100%;
      width: 100%;
      text-align: left;
      margin-top: 3px;
    }

    #deepep-analysis .viz-split-row {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 760px) {
    #deepep-analysis .viz-controls {
      grid-template-columns: 1fr;
      gap: 8px;
    }

    #deepep-analysis .viz-toolbar {
      padding: 9px 10px;
    }

    #deepep-analysis .viz-controls-primary {
      gap: 8px;
    }

    #deepep-analysis .viz-group {
      width: 100%;
    }

    #deepep-analysis .viz-segmented-control {
      width: 100%;
    }

    #deepep-analysis .viz-segment {
      flex: 1 1 auto;
    }

    #deepep-analysis .viz-status-bar {
      width: 100%;
    }

    #deepep-analysis .viz-canvas-wrap {
      height: 236px;
      min-height: 236px;
    }
  }
</style>
