    font-weight: 300;
    font-style: italic;
    font-display: swap;
  }

  @font-face {
    font-family: "Polysans";
    src: url("https://cdn.prod.website-files.com/68ac5846a995a97fabe3fd02/68f4bf8876d6a294f19e724a_PolySans-NeutralItalic.woff2") format("woff2");
    font-weight: 400;
    font-style: italic;
    font-display: swap;
  }

  @font-face {
    font-family: "Polysans";
    src: url("https://cdn.prod.website-files.com/68ac5846a995a97fabe3fd02/68f4bf88c205a6507554a1a0_PolySans-MedianItalic.woff2") format("woff2");
    font-weight: 500;
    font-style: italic;
    font-display: swap;
  }

  @font-face {
    font-family: "Polysans";
    src: url("https://cdn.prod.website-files.com/68ac5846a995a97fabe3fd02/68f4bf8839e52d48a079fc85_PolySans-BulkyItalic.woff2") format("woff2");
    font-weight: 700;
    font-style: italic;
    font-display: swap;
  }

  :root {
    --impala-cream: #fffcf6;
    --impala-cream-2: #fff8ef;
    --impala-sand: #fff2db;
    --impala-peach: #ffdcaf;
    --impala-ink: #101828;
    --impala-brown: #4e181a;
    --impala-brown-deep: #460f12;
    --impala-green: #143c1e;
    --impala-blue: #227bfb;

    --surface: #ffffff;
    --surface-2: var(--impala-cream-2);
    --surface-3: var(--impala-sand);

    --fg: var(--impala-ink);
    --muted: rgba(16, 24, 40, 0.72);
    --muted-2: rgba(16, 24, 40, 0.52);

    --border: rgba(78, 24, 26, 0.1);
    --border-strong: rgba(78, 24, 26, 0.18);

    --accent: var(--impala-blue);
    --compute: var(--impala-green);
    --comm: var(--impala-blue);
    --combine: #d04e43;
    --dbo: #6a5bf4;
    --no-overlap: #d97706;

    --r-xl: 14px;
    --r-lg: 12px;
    --r-md: 10px;
    --r-sm: 8px;

    --font-body: "DM Sans", -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
    --font-display: "Polysans", "DM Sans", -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
    --font-mono: "JetBrains Mono", "SF Mono", Monaco, Consolas, "Liberation Mono", monospace;

    --shadow-soft: none;
    --shadow-card: none;
  }

  html,
  body {
    background: linear-gradient(180deg, var(--impala-cream) 0%, var(--impala-cream-2) 38%, var(--impala-cream) 100%);
    color: var(--fg);
    font-family: var(--font-body);
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
  }

  d-title h1,
  d-article h1,
  d-article h2,
  d-article h3,
  d-appendix h3 {
    font-family: var(--font-display);
    color: var(--impala-brown-deep);
    letter-spacing: -0.02em;
  }

  d-title h1 {
    font-weight: 500;
    line-height: 0.95;
  }

  d-title p {
    color: rgba(70, 15, 18, 0.78);
    font-family: var(--font-body);
    max-width: 48rem;
  }

  d-byline {
    border-top: 1px solid var(--border);
    border-bottom: 1px solid var(--border);
    background: linear-gradient(180deg, rgba(255, 242, 219, 0.55), rgba(255, 252, 246, 0.35));
  }

  d-byline .authors,
  d-byline .published-date,
  d-byline a {
    font-family: var(--font-body);
    color: var(--muted);
  }

  d-article {
    font-family: var(--font-body);
    font-size: 1.03rem;
    line-height: 1.72;
  }

  d-article p,
  d-article li {
    color: rgba(16, 24, 40, 0.9);
  }

  d-article p {
    max-width: 70ch;
    margin: 0.95rem 0;
    line-height: 1.72;
  }

  d-article ul,
  d-article ol {
    margin: 0.9rem 0 1.2rem;
    padding-left: 1.2rem;
  }

  d-article li {
    margin: 0.3rem 0;
    line-height: 1.66;
  }

  d-article h2 {
    margin-top: 2.35rem;
    margin-bottom: 0.75rem;
    line-height: 1.12;
    letter-spacing: -0.015em;
  }

  d-article h3 {
    margin-top: 1.85rem;
    margin-bottom: 0.62rem;
    line-height: 1.18;
  }

  d-article h2 + p,
  d-article h3 + p {
    margin-top: 0.28rem;
  }

  d-article a {
    color: var(--accent);
    text-decoration-color: rgba(34, 123, 251, 0.32);
    text-underline-offset: 0.15em;
  }

  d-article a:hover {
    color: #165fd1;
    text-decoration-color: rgba(22, 95, 209, 0.45);
  }

  d-article blockquote {
    border-left: 3px solid var(--impala-brown);
    background: linear-gradient(90deg, rgba(255, 242, 219, 0.65), rgba(255, 252, 246, 0.65));
    border-radius: 0 var(--r-lg) var(--r-lg) 0;
    margin: 1.5rem 0;
    padding: 0.85rem 1rem;
    color: var(--muted);
  }

  d-article hr {
    border-color: var(--border);
    margin: 2.15rem 0;
  }

  d-appendix {
    background: linear-gradient(180deg, rgba(255, 242, 219, 0.55), rgba(255, 252, 246, 0.55));
    border: 1px solid var(--border);
    border-radius: var(--r-xl);
    padding: 1.25rem 1.5rem;
    color: var(--muted);
  }

  d-appendix h3 {
    margin-top: 0;
  }

  distill-footer {
    color: var(--muted-2);
  }

  /* Tables: keep a clean native layout on desktop, then enable horizontal
     scrolling on smaller screens only. */
  d-article table {
    width: 100%;
    margin: 1.2rem 0;
    border-collapse: collapse;
    table-layout: auto;
  }

  d-article table th,
  d-article table td {
    white-space: normal;
    overflow-wrap: normal;
    word-break: normal;
    hyphens: auto;
    vertical-align: top;
    border-bottom: 1px solid var(--border);
    padding: 0.52rem 0.72rem;
    line-height: 1.45;
  }

  d-article table th {
    font-weight: 600;
    color: var(--impala-brown-deep);
    background: rgba(255, 248, 239, 0.55);
  }

  @media (max-width: 900px) {
    d-article table {
      display: block;
      width: max-content;
      min-width: 100%;
      overflow-x: auto;
      overflow-y: hidden;
      -webkit-overflow-scrolling: touch;
    }

    d-article table th,
    d-article table td {
      font-size: 0.88rem;
      white-space: nowrap;
      hyphens: none;
    }
  }

  k-math[block],
  d-math[block] {
    display: block;
    margin: 1rem 0;
    max-width: 100%;
    overflow-x: auto;
    overflow-y: hidden;
    -webkit-overflow-scrolling: touch;
  }

  .katex-display,
  k-math[block] .katex-display,
  d-math[block] .katex-display {
    margin: 0;
    max-width: 100%;
    overflow-x: auto;
    overflow-y: hidden;
    padding: 0.08rem 0.12rem 0.34rem;
    -webkit-overflow-scrolling: touch;
  }

  .katex-display > .katex {
    white-space: nowrap;
  }

  @media (max-width: 700px) {
    d-article {
      font-size: 1rem;
      line-height: 1.68;
    }

    d-article h2 {
      margin-top: 2rem;
      margin-bottom: 0.65rem;
    }

    d-article h3 {
      margin-top: 1.6rem;
      margin-bottom: 0.55rem;
    }

    d-article p {
      margin: 0.8rem 0;
    }

    d-article table th,
    d-article table td {
      font-size: 0.84rem;
      padding: 0.46rem 0.56rem;
    }

    .katex {
      font-size: 1em;
    }

    .katex-display {
      font-size: 0.96em;
    }
  }
  
  /*
     Base Distill structure is still driven by template.v2.js.
     We only layer Impala typography/colors and style custom .viz-* widgets.
  */
  
  /* Default to full screen (l-screen behavior) */
  #dbo-figure,
  #deepep-figure,
  #deepep-mechanics,
  #deepep-analysis,
  #eplb-figure {
    grid-column: screen;
  }

  /* On wide screens, restrict to page width */
  @media (min-width: 1600px) {
    #dbo-figure,
    #deepep-figure,
    #deepep-mechanics,
    #deepep-analysis,
    #eplb-figure {
      grid-column: page;
    }
  }

  /* Widget container */
  .viz-widget {
    margin: 36px 0;
    border-radius: var(--r-xl);
    background: var(--surface);
    overflow: hidden;
  }
  
  /* Figure caption override for widget internal captions */
  .viz-widget > figcaption {
    padding: 12px 16px;
    background: var(--surface-2);
    font-size: 0.85rem;
    color: var(--muted);
    line-height: 1.5;
  }
  
  .viz-widget-header {
    padding: 12px 16px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 16px;
    flex-wrap: wrap;
    background: var(--surface-2);
  }
  
  .viz-widget-title {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--impala-brown-deep);
    margin: 0;
  }
  
  .viz-kpi {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: var(--muted);
    white-space: nowrap;
  }
  
  .viz-widget-body {
    padding: 20px;
    background: var(--surface);
  }
  
  /* Controls grid */
  .viz-controls {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 14px;
    margin-bottom: 20px;
  }
  
  .viz-ctrl {
    border-radius: var(--r-lg);
    background: var(--surface-2);
    padding: 12px;
  }
  
  .viz-ctrl-row {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    gap: 12px;
    margin-bottom: 8px;
  }
  
  .viz-ctrl-label {
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--fg);
  }
  
  .viz-ctrl-value {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: var(--muted);
  }
  
  .viz-ctrl-hint {
    font-size: 0.75rem;
    color: var(--muted-2);
    line-height: 1.5;
    margin-bottom: 10px;
  }
  
  .viz-ctrl input[type="range"] {
    width: 100%;
    margin: 0;
    accent-color: var(--accent);
  }
  
  /* Toolbar */
  .viz-toolbar {
    margin-bottom: 20px;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .viz-controls-primary {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    gap: 16px;
  }

  .viz-toggles {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }

  .viz-toggle {
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 6px 12px;
    border-radius: 100px;
    background: var(--surface);
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--muted);
    cursor: pointer;
    transition: all 0.15s ease;
    user-select: none;
  }

  .viz-toggle:hover {
    background: var(--surface-2);
  }

  .viz-toggle input {
    margin: 0;
    accent-color: var(--accent);
  }

  .viz-actions {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .viz-presets {
    display: flex;
    align-items: center;
    gap: 6px;
    padding-left: 12px;
  }

  .viz-presets-label {
    font-size: 0.7rem;
    color: var(--muted-2);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 500;
  }

  .viz-btn {
    appearance: none;
    border: none;
    background: var(--surface);
    color: var(--impala-brown-deep);
    padding: 6px 12px;
    border-radius: var(--r-sm);
    font-family: var(--font-body);
    font-size: 0.75rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.15s ease;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .viz-btn:hover {
    background: var(--surface-2);
  }

  .viz-btn-sm {
    padding: 4px 10px;
    font-size: 0.7rem;
  }

  .viz-btn-icon {
    padding: 6px;
    border-radius: 50%;
    width: 28px;
    height: 28px;
    color: var(--muted);
  }
  
  .viz-btn-icon:hover {
    color: var(--fg);
  }

  /* Status Bar */
  .viz-status-bar {
    background: var(--surface);
    border-radius: var(--r-md);
    padding: 8px 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 36px;
  }

  .viz-status-content {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--fg);
    text-align: center;
    width: 100%;
  }

  /* Highlight specific parts of the status string if needed */
  .viz-status-content strong {
    font-weight: 600;
    color: var(--accent);
  }
  
  /* Canvas containers */
  .viz-canvas-wrap {
    position: relative;
    margin-bottom: 16px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    min-height: 200px; /* Ensure strict minimum height to prevent collapse */
    overflow: hidden;
    width: 100%;
  }
  
  .viz-canvas {
    position: absolute; /* Take out of flow to prevent resize loops */
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: block;
    border-radius: var(--r-lg);
    background: var(--surface-2);
    box-sizing: border-box;
  }
  
  /* Timeline keeps its fixed height logic but uses the new absolute positioning structure */
  #timeline { 
    /* For timeline, we want it fixed, so we override the wrapper height */
  }
  /* We need to target the wrapper of the timeline to fix its height */
  /* This is a bit tricky with the generic class. Let's use specific IDs for wrappers if possible or just style the wrapper based on the child? 
     CSS doesn't support parent selection. 
     
     Alternative: Only apply absolute positioning to the #curves canvas?
     Or apply fixed height to timeline wrapper.
  */
  
  /* Let's be specific to avoid breaking the timeline */
  .viz-canvas-wrap:has(#timeline) {
     flex-grow: 0;
     height: 200px;
     min-height: 200px;
  }
  
  #curves { 
    /* No specific styles needed, inherits absolute from .viz-canvas */
  }
  #deepepCurve { aspect-ratio: 2.5 / 1; min-height: 250px; max-height: 320px; }
  #deepepTopo { aspect-ratio: 1.8 / 1; max-height: 320px; }
  #deepepTimeline { aspect-ratio: 3 / 1; max-height: 180px; }
  
  /* Legends */
  .viz-legend {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
    margin-top: 12px;
  }
  
  .viz-legend-item {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 0.75rem;
    color: var(--muted);
  }
  
  .viz-legend-swatch {
    width: 14px;
    height: 3px;
    border-radius: 2px;
    flex-shrink: 0;
  }
  
  .viz-legend-swatch.dashed {
    background: repeating-linear-gradient(
      90deg,
      currentColor 0px,
      currentColor 4px,
      transparent 4px,
      transparent 7px
    );
  }
  
  .viz-legend-swatch.dotted {
    background: repeating-linear-gradient(
      90deg,
      currentColor 0px,
      currentColor 2px,
      transparent 2px,
      transparent 5px
    );
  }
  
  .viz-legend-swatch.with-marker {
    position: relative;
  }
  
  .viz-legend-swatch.with-marker::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 5px;
    height: 5px;
    border-radius: 50%;
    background: inherit;
  }
  
  /* Viz grid - used for layout within widget */
  .viz-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
  }
  
  /* Viz card */
  .viz-card {
    border-radius: var(--r-lg);
    background: var(--surface);
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  .viz-card.l-body-outset {
    margin-top: 16px;
  }
  
  .viz-card-header {
    padding: 10px 12px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 8px;
    background: var(--surface-2);
    flex-wrap: wrap;
    flex-shrink: 0;
  }

  .viz-card-title {
    font-family: var(--font-mono);
    font-size: 0.65rem;
    font-weight: 500;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--muted);
    margin: 0;
    white-space: nowrap;
  }
  
  .viz-card-body {
    padding: 16px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }
  
  .viz-card-caption {
    font-size: 0.75rem;
    color: var(--muted-2);
    line-height: 1.5;
    margin-top: 10px;
    max-width: none;
  }
  
  /* Callout */
  .viz-callout {
    background: var(--surface-2);
    border-radius: var(--r-lg);
    padding: 16px 20px;
    font-size: 0.95rem;
    color: var(--muted);
    line-height: 1.65;
    margin: 24px 0;
    border-left: 3px solid var(--impala-brown);
  }

  /* Details accordion */
  .viz-details {
    border-radius: var(--r-lg);
    background: var(--surface);
    overflow: hidden;
