---
interface Props {
  title: string;
  description: string;
  author?: string;
  date?: string;
}

const { title, description, author = "Impala Team", date } = Astro.props;
---

<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="description" content={description} />
  <title>{title}</title>
  
  <!-- Distill Template -->
  <script src="https://distill.pub/template.v2.js"></script>
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://cdn.prod.website-files.com" crossorigin />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet" />
  
  <!-- D3.js for visualizations -->
  <script src="https://cdn.jsdelivr.net/npm/d3@7/dist/d3.min.js"></script>
  
  <!-- Highlight.js from cdnjs (official docs format) -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.11.1/styles/github-dark.min.css">
  <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.11.1/highlight.min.js"></script>
</head>
<body>
  <d-front-matter>
    <script type="text/json" set:html={JSON.stringify({
      title: title,
      description: description,
      authors: [{
        author: author,
        authorURL: "https://getimpala.ai",
        affiliations: [{
          name: "Impala AI",
          affiliationURL: "https://getimpala.ai"
        }]
      }]
    })}></script>
  </d-front-matter>

  <d-title>
    <h1>{title}</h1>
    <p>{description}</p>
  </d-title>

  <d-byline></d-byline>

  <d-article>
    <slot />
  </d-article>

  <d-appendix>
    <h3>Impala AI</h3>
    <p>
      Exploring the frontiers of efficient AI infrastructure.
    </p>
  </d-appendix>

  <distill-footer></distill-footer>

  <!-- Render math (<k-math>) with bundled KaTeX. -->
  <script>
    import '../scripts/render-d-math';
    import '../scripts/render-k-code';
  </script>
</body>
</html>

<style is:global>
  /* ==========================================================================
     Widget Styles (Custom interactive components)
     ========================================================================== */
  
